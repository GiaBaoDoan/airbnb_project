{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,


    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": false, // tắc thông báo lỗi ở registertemplate.tsx ||   toast.error(err?.response.data.content); || true lên là về ban đầu
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    // custom cho import ngắn lại
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "src",
    "paths": {
      // custom cho import ngắn lại | ghi ra tất cả các name folder || chi tiết index.ts
      "assets": ["assets"],
      "components": ["components"],
      "constant": ["constant"],
      "demo": ["demo"],
      "hooks": ["hooks"],
      "pages": ["pages"],
      "router": ["router"],
      "services": ["services"],
      "store": ["store"],
      "types": ["types"],
      "utils" : ["utils"],
      "schema": ["schema"],
    }
     
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
